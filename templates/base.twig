<!doctype html>
<html {{ function('language_attributes') }}>

    {% include 'templates/head.twig' %}

    <body {{ fn('body_class', 'drawer drawer--top drawer--navbarTopGutter') }}>
        {% include 'templates/header.twig' %}

            {% block body %}

                <div class="content row">
                    <main class="col-md-8">
                        {% block content %}{% endblock %}
                    </main>
                    {% if display_sidebar %}
                        <aside class="sidebar col-md-4">
                            {% block sidebar %}
                                {% include 'templates/sidebar.twig' %}
                            {% endblock %}
                        </aside>
                    {% endif %}
                </div>
                
            {% endblock %}

        {% include 'templates/footer.twig' %}
    </body>

</html>