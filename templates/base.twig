<!doctype html>
<html {{ function('language_attributes') }}>

    {% include 'templates/head.twig' %}

    <body class="{{ body_class }} drawer drawer--top drawer--navbarTopGutter">
        {% include 'templates/header.twig' %}

            {% block body %}
            <div class="main-content">
                <div class="danzerpress-wrap">
                    <div class="danzerpress-flex-row">
                        <main class="danzerpress-two-thirds">
                            {% block content %}{% endblock %}
                        </main>
                        {% if display_sidebar %}
                            <aside class="danzerpress-one-third">
                                {% block sidebar %}
                                    {% include 'templates/sidebar.twig' %}
                                {% endblock %}
                            </aside>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% endblock %}

        {% include 'templates/footer.twig' %}
    </body>

</html>