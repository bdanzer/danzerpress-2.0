<article {{ fn('post_class', ['danzerpress-col-3', 'danzerpress-flex-column', 'wow', 'fadeIn']) }}>
    <div class="image-wrap">
        <a href="{{ post.link }}"><img src="{{ post.thumbnail.src }}"></a>
    </div>
    <div class="danzerpress-box danzerpress-white">
        <header>
            <h2 class="entry-title"><a href="{{ post.link }}">{{ post.title }}</a></h2>
        </header>
        <div class="entry-summary">
            {{ post.preview.length(10).force.end('').read_more('') }}
        </div>
    </div>
    <a class="danzerpress-button-modern" href="{{ post.link }}">Read More</a>
</article>