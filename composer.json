{
  "name": "bdanzer/danzerpress-2.0",
  "version": "master",
  "description": "Starter theme - mix of Sage and Timber theme",
  "type":"wordpress-theme",
  "minimum-stability" : "stable",
  "authors": [
      {
          "name": "Britt Danzer",
          "email": "britt.danzer@gmail.com"
      }
  ],
  "extra": {
  	"installer-paths": {
      "../../plugins/{$name}/": [
        "wpackagist-plugin/*",
        "type:wordpress-plugin"
      ]
  	}
	},
  "require": {
    "wpackagist-plugin/show-current-template" : "*"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
    	"type": "vcs",
      "url": "git@github.com:bdanzer/danzerpress-2.0.git"
    }
  ]
}