{% if not post.hide_nav %}
  <header class="drawer-navbar drawer-navbar--fixed{{ (post.hide_header and not post.hide_nav) ? ' danzerpress-non-trans' : '' }}" role="banner">
    <div class="drawer-container">
      <div class="drawer-navbar-header">
        <a class="drawer-brand" href="{{ function('home_url', '/') }}">
          <img alt="logo-light" class="light-logo danzerpress-logo" style="max-height: 60px;" src="{{ fn('get_field', 'transparent_logo', 'option') }}">
          <img alt="logo-dark" class="dark-logo danzerpress-logo" style="max-height: 60px;" src="{{ fn('get_field', 'non_transparent_logo', 'option') }}">
        </a>
        <button type="button" class="drawer-toggle drawer-hamburger">
          <span class="sr-only">toggle navigation</span>
          <span class="drawer-hamburger-icon"></span>
        </button>
      </div>
      <nav class="drawer-nav" role="navigation">
        <ul class="drawer-menu ">
            {% for item in menu.get_items %}
                <li class="{{item.classes | join(' ')}}"><a class="{{ (item.get_children) ? 'drawer-dropdown' }}" href="{{item.get_link}}">{{item.title}}</a>
                    {% if item.get_children %}
                        <span class="drawer-caret"></span>
                        <ul class="drawer-dropdown-menu">
                            {% for child in item.get_children %}
                                <li><a class="drawer-dropdown-menu-item" href="{{child.get_link}}">{{child.title}}</a></li>
                                {% if child.get_children %}
                                  <ul class="level-3-submenu">
                                    {% for child_3 in child.get_children %}
										<li><a class="drawer-dropdown-menu-item" href="{{child_3.get_link}}">{{child_3.title}}</a></li>
                                    {% endfor %}
                                  </ul>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
      </nav>
    </div>
  </header>
{% endif %}

{% if site.get_theme_color %}
	{% include 'templates/colors/change_colors.twig' %}
{% endif %}
 
{% if false == post.hide_header %}
  <div class="danzerpress-title-area danzerpress-flex-column danzerpress-align-content danzerpress-justify-content">
    {{dpImage(post.get_header_thumbnail, 'danzerpress-parallax')}}
    <h1 class="danzerpress-title">{{ post.get_header_title }}</h1>
  </div>
{% endif %}